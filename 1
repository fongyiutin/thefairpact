        hideAllInfo();
        mainInfo.classList.remove('hidden');
        
        // Hide all letter nodes
        function hideAllLetterNodes() {
            tNode.classList.remove('active');
            hNode.classList.remove('active');
            eNode.classList.remove('active');
            fNode.classList.remove('active');
            a1Node.classList.remove('active');
