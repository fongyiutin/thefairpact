            if (mainNode.classList.contains('shifted')) {
                drawCurvePath(mainNode, theNode, mainToThe);
                drawCurvePath(mainNode, fairNode, mainToFair);
                drawCurvePath(mainNode, pactNode, mainToPact);
            }
            
            if (theToT.classList.contains('active')) {
                drawCurvePath(theNode, tNode, theToT);
                drawCurvePath(theNode, hNode, theToH);
                drawCurvePath(theNode, eNode, theToE);
