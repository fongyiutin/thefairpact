        // Check for mobile device and add appropriate settings
        function checkMobileDevice() {
            const isMobile = window.innerWidth <= 900;
            if (isMobile) {
                // Additional adjustments for mobile devices
                document.querySelector('.mindmap').style.transformOrigin = 'center center';
            }
        }
        
        // Check device on initialization
        window.addEventListener('load', checkMobileDevice);
        // Recheck on window resize
        window.addEventListener('resize', checkMobileDevice);
