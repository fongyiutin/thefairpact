            hideAllInfo();
            hideAllLetterNodes();
            hideAllGroupNodes();
            mainInfo.classList.remove('hidden');
        }
        
        // Click on main node, expand groups
        mainNode.addEventListener('click', function() {
            hideAllInfo();
            hideAllLetterNodes();
            
            // Move main node to the left
            mainNode.classList.add('shifted');
            
            // Show group nodes
            theNode.classList.add('active');
            fairNode.classList.add('active');
            pactNode.classList.add('active');
            
            // Show connectors
            mainToThe.classList.add('active');
            mainToFair.classList.add('active');
            mainToPact.classList.add('active');
            
            // Draw curves
            setTimeout(() => {
                drawCurvePath(mainNode, theNode, mainToThe);
                drawCurvePath(mainNode, fairNode, mainToFair);
                drawCurvePath(mainNode, pactNode, mainToPact);
            }, 500);
            
            // Show main info
            mainInfo.classList.remove('hidden');
        });
        
        // Click on THE group, expand letters
        theNode.addEventListener('click', function() {
            hideAllInfo();
            hideAllLetterNodes();
            
            // Show THE letters
            tNode.classList.add('active');
            hNode.classList.add('active');
            eNode.classList.add('active');
            
            // Show connectors
            theToT.classList.add('active');
            theToH.classList.add('active');
            theToE.classList.add('active');
            
            // Draw curves
            setTimeout(() => {
                drawCurvePath(theNode, tNode, theToT);
                drawCurvePath(theNode, hNode, theToH);
                drawCurvePath(theNode, eNode, theToE);
            }, 100);
            
            // Show THE info
            theInfo.classList.remove('hidden');
        });
        
        // Click on FAIR group, expand letters
        fairNode.addEventListener('click', function() {
